<div id="apercu">
<%= form_for(@evenement) do |f| %>
  <% if @evenement.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@evenement.errors.count, "error") %> prohibited this evenement from being saved:</h2>

      <ul>
      <% @evenement.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<div id="form">
 <table>
   <tr>
     <td><%= f.label :nom %></td><td><%= f.text_field :nom %></td>
   </tr>
   <tr>
     <td><%= f.label :description %></td>
     <td><%= f.text_area :description, :rows=>5 %></td>
   </tr>
   <tr>
     <td><%= f.label :date %></td>
     <td><%= f.datetime_select :date %></td>
   </tr>
   <tr>
     <td><%= f.label :frequence %></td>
     <td><%= f.text_field :frequence %></td>
   </tr>
   <tr>
     <td><%= f.label :confidentialite %></td>
     <td><%= f.text_field :confidentialite %></td>
   </tr>
   <tr>
     <td><%= f.label :endroit_id %></td>
     <td><%= f.collection_select(:endroit_id, Endroit.all, :id, :nom) %></td>
   </tr>
   <tr>
     <td><%= f.label :categorie_Event %></td>
     <td><%= f.collection_select(:categorie_event_id, CategorieEvent.all, :id, :libelle) %></td>
   </tr>
   <tr><td><%= f.hidden_field :user_id, :value=>session[:user_id] %></td></tr>
   <tr>
     <td colspan="2"><%= f.submit "Valider" %></td>
   </tr>
 </table>

<% end %>
</div>
</div>