<h1>Listing users</h1>

<table>
  <tr>
    <th>Prenom</th>
    <th>Nom</th>
    <th>Login</th>
    <th>Password</th>
    <th>Email</th>
    <th>Telephone</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.prenom %></td>
    <td><%= user.nom %></td>
    <td><%= user.login %></td>
    <td><%= user.password %></td>
    <td><%= user.email %></td>
    <td><%= user.telephone %></td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

